FLAG = -Wextra -Werror -Wall

CC = gcc

NAME = libft.a

#include files of functions you wish to test here if *.c is not working.
source = 	*.c	\
			
OBJECTS = $(source:%.c=%.o)


all: $(NAME)

%.o: %.c
	$(CC) $(FLAG) -o $@ -c $<

$(NAME):	$(OBJECTS)
						ar src $(NAME) $(OBJECTS)

clean:
						rm -f $(OBJECTS)

fclean:		clean
						rm -f $(NAME)

re:			fclean all

.PHONY: all clean fclean re
